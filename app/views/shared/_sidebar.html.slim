style
  |  .sidebar { text-align: center; background-color: gray; padding: 10px; }

.sidebar
  - if user_signed_in? || admin_signed_in?
    h2
      | Navigation
    = link_to "Feed Page", root_path, class: "btn btn-navbar"
    br
    = link_to "Featured Page", featured_posts_path, class: "btn btn-navbar"
    br
    - if user_signed_in?
      = link_to "My Posts", my_posts_path, class: "btn btn-navbar"
      br
      = link_to "Create Post", new_post_path, class: "btn btn-createpost"
      br
      = button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-logout"
    - elsif admin_signed_in?
      br
      = button_to "Logout", destroy_admin_session_path, method: :delete, class: "btn btn-logout"
  - else
    h2
      | User
    = link_to "User Login", new_user_session_path, class: "btn btn-info"
    br
    = link_to "User Signup", new_user_registration_path, class: "btn btn-info"
    hr
    h2
      | Admin
    = link_to "Admin Login", new_admin_session_path, class: "btn btn-info"
    br
    = link_to "Admin Signup", new_admin_registration_path, class: "btn btn-info"
