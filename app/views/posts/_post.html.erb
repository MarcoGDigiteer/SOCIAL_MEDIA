<div class="post-card">
  <div class="post-content">
    <h2 class="post-title"><%= post.title %></h2>
    <p class="post-meta">
      Created: <%= post.created_at.strftime("%b %d, %Y %I:%M %p") %> |
      Edited: <%= post.updated_at.strftime("%b %d, %Y %I:%M %p") %>
    </p>
    <p class="post-body"><%= post.content %></p>
  </div>

  <div class="post-actions">
    <button class="action-button edit-button" onclick="openEditPost('<%= post.id %>', '<%= j post.title %>', '<%= j post.content %>')">‚úèÔ∏è</button>
    <button class="action-button delete-button" onclick="openDeletePost(<%= post.id %>)">üóëÔ∏è</button>
  </div>
</div>

<style>
  .post-card {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
    background: #ffffff;
    padding: 20px;
    border-bottom: 1px solid #ddd;
    position: relative;
  }

  .post-meta {
    font-size: 12px;
    color: gray;
    margin-top: 5px;
  }

  .post-body {
    font-size: 19px;
    color: #333;
  }

  .post-actions {
    display: flex;
    gap: 10px;
  }

  .action-button {
    background: lightgray;
    border: none;
    border-radius: 15px;
    padding: 8px 12px;
    text-decoration: none;
    color: black;
    font-size: 14px;
    cursor: pointer;
  }

  .action-button:hover {
    background: darkgray;
    color: white;
  }
</style>
