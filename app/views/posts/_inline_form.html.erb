<turbo-frame id="post_<%= post.id %>">
  <div class="post-card">
    <%= form_with model: post, url: post_path(post), method: :patch, local: false, data: { turbo_frame: "post_#{post.id}" } do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", required: true, rows: 3 %>
      </div>

      <div class="form-actions">
        <%= f.submit "Save", class: "btn btn-success" %>
        <%= link_to "Cancel", post_path(post), class: "btn btn-secondary", data: { turbo_frame: "post_#{post.id}" } %>
      </div>
    <% end %>
  </div>
</turbo-frame>
